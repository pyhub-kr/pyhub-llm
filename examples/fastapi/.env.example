# OpenAI API 설정
OPENAI_API_KEY=your_openai_api_key_here

# FastAPI 설정
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000
FASTAPI_RELOAD=true

# 인증 설정 (선택적)
API_SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis 설정 (세션 관리용, 선택적)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting 설정
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# 로깅 설정
LOG_LEVEL=info